<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="jpa-saulpos" transaction-type="RESOURCE_LOCAL">
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MariaDBDialect"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://saulpos_mariadb:3306/saulpos"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="saulhidalgo"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="update"/>
            <property name="hibernate.event.merge.entity_copy_observer" value="allow"/>

            <!-- Enable SQL Logging -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <!-- Enable parameter logging (this will show the actual values in queries) -->
            <property name="hibernate.type.descriptor.sql.BasicBinder" value="TRACE"/>
        </properties>
    </persistence-unit>
</persistence>