<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="mainPOSVBox" alignment="CENTER" xmlns="http://javafx.com/javafx/22">
    <children>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <children>
                <VBox alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="150.0"
                      style="-fx-background-color: #263238;">
                    <children>
                        <Label fx:id="employeeLabel" alignment="CENTER_RIGHT" textAlignment="CENTER" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Label>
                    </children>
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </padding>
                </VBox>
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: #263238;"
                      HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Saul POS" textAlignment="CENTER" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="32.0"/>
                            </font>
                        </Label>
                    </children>
                </VBox>
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="150.0" style="-fx-background-color: #263238;">
                    <children>
                        <Label fx:id="dateLabel" alignment="CENTER_RIGHT" textAlignment="CENTER" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="18.0"/>
                            </font>
                        </Label>
                        <Label fx:id="clockLabel" alignment="CENTER_RIGHT" layoutX="10.0" layoutY="10.0"
                               textAlignment="CENTER" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="21.0"/>
                            </font>
                        </Label>
                    </children>
                </VBox>
            </children>
        </HBox>
      <HBox VBox.vgrow="ALWAYS">
         <children>
             <GridPane gridLinesVisible="true">
              <columnConstraints>
                  <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0"/>
                  <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0"/>
              </columnConstraints>
              <rowConstraints>
                <RowConstraints vgrow="ALWAYS" />
                <RowConstraints vgrow="ALWAYS" />
                <RowConstraints vgrow="ALWAYS" />
                  <RowConstraints vgrow="ALWAYS" />
                  <RowConstraints vgrow="ALWAYS" />
                  <RowConstraints vgrow="ALWAYS" />
              </rowConstraints>
               <children>
                   <Button fx:id="chargeButton" mnemonicParsing="false" prefHeight="70.0" prefWidth="180.0"
                           text="Cobrar (F1)" textAlignment="CENTER"/>
                   <Button fx:id="deleteCurrentButton" layoutX="23.0" layoutY="31.0" mnemonicParsing="false"
                           prefHeight="70.0" prefWidth="180.0" text="Borrar (BACK)" textAlignment="CENTER"
                           GridPane.columnIndex="1"/>
                   <Button fx:id="clientsButton" layoutX="25.0" layoutY="24.0" mnemonicParsing="false" prefHeight="70.0"
                           prefWidth="180.0" text="Clientes (F2)" textAlignment="CENTER" GridPane.rowIndex="1"/>
                   <Button fx:id="removeCashButton" layoutX="145.0" layoutY="24.0" mnemonicParsing="false"
                           prefHeight="70.0" prefWidth="180.0" text="Extraer Dinero (F3)" textAlignment="CENTER"
                           GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                   <Button fx:id="sendToWaitButton" layoutX="25.0" layoutY="91.0" mnemonicParsing="false"
                           prefHeight="70.0" prefWidth="180.0" text="A espera (F4)" textAlignment="CENTER"
                           GridPane.rowIndex="2"/>
                   <Button fx:id="viewWaitingButton" layoutX="175.0" layoutY="91.0" mnemonicParsing="false"
                           prefHeight="70.0" prefWidth="180.0" text="Ver Espera (F5)" textAlignment="CENTER"
                           GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                   <Button fx:id="deleteAllButton" layoutX="25.0" layoutY="90.0" mnemonicParsing="false"
                           prefHeight="70.0" prefWidth="180.0" text="Borrar Pedido (DEL)" textAlignment="CENTER"
                           GridPane.rowIndex="3"/>
                   <Button fx:id="creditNoteButton" layoutX="25.0" layoutY="130.0" mnemonicParsing="false"
                           prefHeight="70.0" prefWidth="180.0" text="Nota de Credito (F6)" textAlignment="CENTER"
                           GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                   <Button fx:id="globalDiscountButton" layoutX="23.0" layoutY="130.0" mnemonicParsing="false"
                           prefHeight="70.0" prefWidth="180.0" text="Desc Global (F7)" textAlignment="CENTER"
                           GridPane.rowIndex="4"/>
                   <Button fx:id="exitButton" layoutX="173.0" layoutY="130.0" mnemonicParsing="false" prefHeight="70.0"
                           prefWidth="180.0" text="Salir (ESC)" textAlignment="CENTER" GridPane.columnIndex="1"
                           GridPane.rowIndex="4"/>
                   <Button layoutX="173.0" layoutY="170.0" mnemonicParsing="false" prefHeight="70.0" prefWidth="180.0"
                           text="Reporte X (F8)" textAlignment="CENTER" GridPane.rowIndex="5" fx:id="xReportButton"/>
                   <Button fx:id="zReportButton" layoutX="23.0" layoutY="210.0" mnemonicParsing="false"
                           prefHeight="70.0" prefWidth="180.0" text="Reporte Z (END)" textAlignment="CENTER"
                           GridPane.columnIndex="1" GridPane.rowIndex="5"/>
               </children>
            </GridPane>
             <VBox prefWidth="300.0">
                 <children>
                     <GridPane>
                         <columnConstraints>
                             <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                             <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                         </columnConstraints>
                         <rowConstraints>
                             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                         </rowConstraints>
                     </GridPane>
                 </children>
             </VBox>
            <VBox HBox.hgrow="ALWAYS">
               <children>
                  <TextField fx:id="barcodeTextField" promptText="Codigo de Barras" VBox.vgrow="NEVER">
                     <VBox.margin>
                        <Insets left="20.0" right="20.0" top="20.0" />
                     </VBox.margin>
                  </TextField>
                  <TableView fx:id="itemsTableView" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="descriptionColumn" prefWidth="-1.0" text="Descripcion" />
                      <TableColumn fx:id="amountColumn" prefWidth="-1.0" text="Cantidad" />
                        <TableColumn fx:id="discountLabel" prefWidth="-1.0" text="Descuento" />
                        <TableColumn fx:id="priceColumn" prefWidth="-1.0" text="Precio" />
                        <TableColumn fx:id="vatColumn" prefWidth="-1.0" text="IVA" />
                        <TableColumn fx:id="totalColumn" prefWidth="-1.0" text="Total" />
                        <TableColumn fx:id="totalUSDColumn" prefWidth="-1.0" text="Total USD" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                     <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </VBox.margin>
                  </TableView>
                  <Separator prefWidth="200.0">
                     <VBox.margin>
                        <Insets left="20.0" right="20.0" />
                     </VBox.margin>
                  </Separator>
                  <GridPane>
                    <columnConstraints>
                      <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="200.0" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label text="Subtotal">
                           <font>
                              <Font name="System Bold" size="13.0" />
                           </font>
                        </Label>
                        <Label layoutX="10.0" layoutY="17.0" text="IVA" GridPane.rowIndex="1">
                           <font>
                              <Font name="System Bold" size="13.0" />
                           </font>
                        </Label>
                        <Label layoutX="10.0" layoutY="47.0" text="Total" GridPane.rowIndex="2">
                           <font>
                              <Font name="System Bold" size="13.0" />
                           </font>
                        </Label>
                        <Label layoutX="127.0" layoutY="77.0" text="Total $" GridPane.rowIndex="3">
                           <font>
                              <Font name="System Bold" size="13.0" />
                           </font>
                        </Label>
                        <Label fx:id="subtotalLabel" text="Label" GridPane.columnIndex="1" />
                        <Label fx:id="ivaLabel" layoutX="230.0" layoutY="17.0" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label fx:id="totalLabel" layoutX="230.0" layoutY="47.0" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label fx:id="totalDollarLabel" layoutX="230.0" layoutY="77.0" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                     </children>
                     <VBox.margin>
                        <Insets left="20.0" right="20.0" />
                     </VBox.margin>
                  </GridPane>
               </children>
            </VBox>
         </children>
      </HBox>
        <HBox alignment="CENTER"/>
   </children>
</VBox>
